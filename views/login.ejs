<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="shortcut icon" href="/images/iACADEMY Seal.ico" />
	<title>iACADEMY | Evaluation</title>

	<!-- semantic-ui styles -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />



	<!-- main css -->
	<link rel="stylesheet" type="text/css" media="screen" href="../css/login.css" />

</head>

<body>

<div class="wrapper">
	<div class="loginContainer">

			<!-- logo -->
			<div class="logoContainer">
				<img src="../images/iACADEMY Seal.png" alt="GRUMBLR" id="SEAL">
			</div>



			<div class="formContainer">
				<div class="ui form" id="loginSegment">
							
					<!-- Brand -->
					<div class="title">
						<p id="iACADEMY">iACADEMY</p>
						<p id="facultyEvalutation">Faculty Evaluation</p>
					</div>

					<!-- message/alert -->
					<% if (locals.message) {
						if (message.length > 0) { %>
						<div class="ui negative message">
							<i class="close icon"></i>
							<div class="header">
								<%= message%>
							</div>
						</div>
						<%}
					}%>
					
					<a href="/auth/google" class="ui button fluid icon labeled red" id="googleMail"><i class="icon google"></i>Login using iACADEMY Gmail</a>
					
					<button type="button" class="ui button primary fluid" id="LoginButton">Admin Login</button>
					
				</div>
			</div><!-- formContainer -->

					<!-- //////////////////////////////////////////////// MODAL //////////////////////////////////////////////////////////////////////////// -->
					<div class="ui modal" id="adminLogin">
						<div class="ui form" id="modal_formContainer">
							<form action="/auth/login" method="POST">
								<div class="login">
									
									<!-- TITLE -->
									<div class="modal_title">
										<h1>iACADEMY</h1>
										<p>Administrator Login</p>
									</div>

									<!-- message/alert -->
									<% if (locals.message) {
										if (message.length > 0) { %>
										<div class="ui negative message">
											<i class="close icon"></i>
											<div class="header">
												<%= message%>
											</div>
										</div>
										<%}
									}%>

									<!-- EMAIL ADDRESS -->
									<div class="field">
										<label id="username">EMAIL ADDRESS</label>
										<input type="text" name="email" autocomplete="off" required="required">
									</div>
		
									<!-- PASSWORD -->
									<div class="field">
										<label id="password">PASSWORD</label>
										<input type="password" name="password" autocomplete="off" required="required">
									</div>

									<button type="submit" class="ui button icon labeled blue">
										<i class="icon sign in"></i> Login
									</button>
								</div>
							</form>	
						</div>
					</div>
					<!-- /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

			

	</div><!-- loginContainer -->
</div><!-- wrapper -->




	
<!-- ======= SEMANTIC UI SCRIPTS ========================================================================================================================== -->
<!-- jquery should be above the semantic.js due to having dependencies -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<!-- semantic-ui javascript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

<!-- ======= MAIN SCRIPTS ================================================================================================================================= -->
<script>
	$('.close.icon')
		.click(function(){
			$('.ui.negative.message').hide();
		})
	;

	$('#adminLogin')
  		.modal('attach events', '#LoginButton', 'show')
	;

</script>

</body>

</html>